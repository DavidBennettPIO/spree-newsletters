- content_for :sidebar do
  %h3 Add Newsletter Module

  = link_to text_for_button_link(t("add_ruler"), :icon => 'add'), '#', :id => 'add_ruler'
  
  %h4 Add Copy
  %p
    = link_to text_for_button_link('Copy', :icon => 'add'), '#', :id => 'add_copy'

  %h4 Add Header  
  %p
    = text_field_tag :add_header_value, nil
    = link_to icon('add'), '#', :id => 'add_header'
      
  %h4 Add Product
  %p
    = text_field_tag :add_product_value, nil
    = hidden_field_tag :add_product_id
    = link_to icon('add'), '#', :id => 'add_product'
    
  %h4 Add Image
  %p
    NAME:
    = text_field_tag :image_name, nil
    <br />HREF:
    = text_field_tag :image_href, nil
    <br />
    = link_to 'select files', '#', :id => 'select_image'
    = link_to icon('add'), '#', :id => 'add_image'


  
      
%fieldset#email_preview
  %legend= t(:newsletter_preview)
  %iframe{:id => 'newsletter-preview', :src => spree.newsletter_path(@newsletter.id), :width => '900px', :height => '600px'}
  .module_order_out
    = render :partial => "module_list"
    #trash TRASH

